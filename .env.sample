# .env.sample
# Copy this file to .env and fill values. DO NOT commit .env with secrets.

############################
# REQUIRED - NETWORK ACCESS
############################

# RPC URL for Mantle Sepolia (or other target network)
# Official Mantle Sepolia RPC URL
MANTLE_SEPOLIA_RPC_URL="https://rpc.sepolia.mantle.xyz"

# RPC URL for Mantle Mainnet (optional)
MANTLE_MAINNET_RPC_URL="https://rpc.mantle.xyz"

# Private key of deployer account (hex string, can include 0x)
# WARNING: keep this safe; use a funded account for deployments
PRIVATE_KEY=""

############################
# OPTIONAL - EXPLORER / VERIFICATION
############################

# Etherscan / block explorer API key for contract verification (if using a plugin)
ETHERSCAN_API_KEY=""

############################
# OPTIONAL - OTHER NETWORKS
############################

# Additional network RPC URLs / private keys if you deploy to multiple networks
# MAINNET_RPC_URL=""
# MAINNET_PRIVATE_KEY=""

############################
# OPTIONAL - DEPLOYMENT CONFIG
############################

# Gas price / gas limit overrides (optional)
# GAS_PRICE=""
# GAS_LIMIT=""

# Alchemy / Infura project IDs (if you prefer them)
# ALCHEMY_API_KEY=""
# INFURA_PROJECT_ID=""

############################
# DEV / CI
############################

# If running in CI, you may set a mnemonic instead of single private key
# MNEMONIC="test test test test test test test test test test test junk"

# Optional: set ETHERSCAN_NETWORK if required by plugin
# ETHERSCAN_NETWORK="mantle-sepolia"

# Optional: enable verbose logging in scripts
# DEBUG=true

# END
